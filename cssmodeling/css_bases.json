{
	"bases":{
		"catchall":{
			"group":"misc",
			"selector":"*",
			"declaration_lines":[
				"box-sizing: border-box;",
				"background-repeat: no-repeat;",
				"background-position: center;",
				"position: relative;"
			]
		},
		"html":{
			"group":"misc",
			"selector":"html",
			"declaration_lines":[
				"width: 100%;",
				"height: 100%;",
				"padding: 0px;",
				"margin: 0px;",
				"overflow: hidden;"
			]
		},
		"body":{
			"group":"misc",
			"selector":"body",
			"declaration_lines":[
				"width: 100%;",
				"height: 100%;",
				"padding: 0px;",
				"margin: 0px;",
				"overflow: hidden;",
				"font-family: 'robotolight';"
			],
			"declaration_includes":[
				"_inc_font-size;"
			]
		},


		"h1":{
			"group":"document",
			"selector":"h1",
			"declaration_lines":[
				"overflow: hidden;",
				"white-space: nowrap;"
			],
			"declaration_includes":[
				"_inc_text-color;",
				"_inc_font-size-largest;",
				"_inc_v-padding-row-half;",
				"_inc_margin-0;",
				"_inc_fill-width;",
				"_inc_single-line"
			]
		},
		"h2":{
			"group":"document",
			"selector":"h2",
			"declaration_includes":[
				"_inc_text-color;",
				"_inc_font-size-large;",
				"_inc_v-padding-row-half;",
				"_inc_margin-0;",
				"_inc_fill-width;",
				"_inc_single-line"
			]
		}

	}
}
